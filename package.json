{
  "private": true,
  "name": "capture-the-flag",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "prestart": "make -j clean bundle/data",
    "start": "webpack serve --hot",
    "test": "jest"
  },
  "dependencies": {
    "@hot-loader/react-dom": "^17.0.0",
    "country-flag-emoji-json": "^1.0.2",
    "maxmind": "^4.3.1",
    "node-libs-browser": "^2.2.1",
    "react": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@types/chrome": "^0.0.126",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.15",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/webpack-env": "^1.15.3",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.3.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.1",
    "babel-preset-react-app": "^10.0.0",
    "bundlewatch": "^0.3.1",
    "codecov": "^3.8.1",
    "coveralls": "^3.1.0",
    "css-loader": "^5.0.1",
    "csv-stream": "^0.2.0",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^4.1.0",
    "fast-stable-stringify": "^1.0.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.0.3",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "i18n-iso-countries": "^6.2.2",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.3.1",
    "node-fetch": "^2.6.1",
    "null-loader": "^4.0.1",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "prettier": "^2.2.0",
    "react-dom": "^17.0.1",
    "react-hot-loader": "^4.13.0",
    "style-loader": "^2.0.0",
    "typescript": "^4.1.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-manifest-plugin": "^2.2.0",
    "webpack-merge": "^5.4.0"
  },
  "keywords": [],
  "author": "Yaroslav",
  "license": "UNLICENSED",
  "husky": {
    "hooks": {
      "pre-commit": "make lint",
      "pre-push": "make --jobs build test"
    }
  },
  "bundlewatch": {
    "files": [
      {
        "path": "./bundle/**/*.html"
      },
      {
        "path": "./bundle/**/*.js"
      },
      {
        "path": "./bundle/**/*.json"
      },
      {
        "path": "./bundle/**/*.svg"
      },
      {
        "path": "./bundle/**/*.woff"
      },
      {
        "path": "./bundle/**/*.mmdb"
      }
    ],
    "ci": {
      "repoBranchBase": "main"
    }
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "bin/**/*.{js,jsx,ts,tsx}",
      "!bin/*.{js,jsx,ts,tsx}",
      "!<rootDir>/**/__test__/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/**/__fixtures__/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/**/__harness__/**/*.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 69,
        "statements": 69
      }
    },
    "setupFiles": [
      "<rootDir>/src/__test__/enzyme.js",
      "<rootDir>/src/__test__/globals.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__test__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/src/__test__/styleMock.js"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
