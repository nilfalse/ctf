      },
      {
        "path": "./bundle/**/*.mmdb"
      }
    ],
    "ci": {
      "repoBranchBase": "main"
    }
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "scripts/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
