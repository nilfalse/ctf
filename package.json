{
  "private": true,
  "name": "ctf",
  "version": "0.0.8",
  "type": "module",
  "scripts": {
    "prestart": "# make clean primary-deps",
    "start": "# webpack serve",
    "test": "jest"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@hot-loader/react-dom": "^17.0.1",
    "country-flag-emoji-json": "^1.0.2",
    "maxmind": "^4.3.1",
    "node-libs-browser": "^2.2.1",
    "react": "^17.0.1",
    "webextension-polyfill": "^0.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-rewire-exports": "^2.3.0",
    "babel-preset-react-app": "^10.0.0",
    "bundlewatch": "^0.3.2",
    "css-loader": "^5.0.1",
    "csv-stream": "^0.2.0",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fast-stable-stringify": "^1.0.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "html-webpack-plugin": "^4.5.1",
    "husky": ">=4",
    "i18n-iso-countries": "^6.4.0",
    "jest": "^26.6.3",
    "lint-staged": ">=10",
    "mini-css-extract-plugin": "^1.3.5",
    "node-fetch": "^2.6.1",
    "null-loader": "^4.0.1",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "prettier": "^2.2.1",
    "react-dom": "^17.0.1",
    "react-hot-loader": "^4.13.0",
    "style-loader": "^2.0.0",
    "typescript": "^4.1.3",
    "webextension-polyfill-ts": "^0.24.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-manifest-plugin": "^3.0.0",
    "webpack-merge": "^5.7.3"
  },
  "keywords": [],
  "author": "Yaroslav",
  "license": "UNLICENSED",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,cjs,mjs}": "eslint --cache",
    "*.{ts,tsx,js,jsx,cjs,mjs,css,md}": "prettier --check"
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "packages/**/*.{js,jsx,ts,tsx}",
      "!packages/bundler/**/*.{js,jsx,ts,tsx}",
      "!packages/bundler/*.{js,jsx,ts,tsx}",
      "!packages/**/bundle/*.{js,jsx,ts,tsx}",
      "bin/**/*.{js,jsx,ts,tsx}",
      "!bin/*.{js,jsx,ts,tsx}",
      "!<rootDir>/**/__test__/**/*.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 81,
        "statements": 80
      }
    },
    "setupFiles": [
      "<rootDir>/packages/runtime/__test__/enzyme.js",
      "<rootDir>/packages/runtime/__test__/globals.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/packages/runtime/__test__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/packages/runtime/__test__/styleMock.js"
    },
    "snapshotResolver": "<rootDir>/packages/runtime/__test__/snapshotResolver.cjs",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "bundlewatch": {
    "files": [
      {
        "path": "./packages/**/bundle/**/*.html"
      },
      {
        "path": "./packages/**/bundle/**/*.js"
      },
      {
        "path": "./packages/**/bundle/**/*.json"
      },
      {
        "path": "./packages/**/bundle/**/*.svg"
      },
      {
        "path": "./packages/**/bundle/**/*.woff"
      },
      {
        "path": "./packages/**/bundle/**/*.mmdb"
      }
    ],
    "ci": {
      "repoBranchBase": "main"
    }
  }
}
